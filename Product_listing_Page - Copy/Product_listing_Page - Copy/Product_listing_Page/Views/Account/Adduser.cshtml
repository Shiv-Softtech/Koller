<body ng-controller="accountCtrl">
    <!--container start -->
    <div class="container-fluid bg-light">
        <div class="row  my-5">
            <div class="col-lg-8 m-auto p-3 mb-5 w-50">
                <h1 class="text-center">Sign In</h1>
                <!-- Registration form section start -->
                <form name="myform" novalidate>
                    <div>
                        <label class="form-group py-3">Name:</label>
                        <input type="text" name="name" ng-model="user.name" class="form-control" placeholder="Enter the name" ng-minlength="3" ng-maxlength="20" ng-pattern="/^[a-z A-Z]*$/" ng-required="true">
                        <span ng-show="myform.$submitted || myform.name.$dirty || myform.name.$touched">
                            <span class="text-danger fw-bold" ng-show="myform.name.$error.required"><i class="fa fa-exclamation-circle"></i>Please fill the name</span>
                            <span class="text-danger fw-bold" ng-show="myform.name.$error.pattern"><i class="fa fa-exclamation-circle"></i>Should only characters</span>
                            <span class="text-danger fw-bold" ng-show="((myform.name.$error.minlength || myform.name.$error.maxlength) && myform.name.$dirty)"><i class="fa fa-exclamation-circle"></i>name vary 3 to 20</span>

                        </span>
                    </div>
                    <div>
                        <label class="form-group py-3">Email Address:</label>
                        <input type="email" name="email" ng-model="user.email" id="email" class="form-control" placeholder="Enter the email address" ng-required="true">
                        <span ng-show="myform.$submitted || myform.email.$dirty || myform.email.$touched">
                            <span class="text-danger fw-bold" ng-show="myform.email.$error.required"><i class="fa fa-exclamation-circle"></i>Please fill the email address</span>
                            <span class="text-danger fw-bold" ng-show="myform.email.$error.email"><i class="fa fa-exclamation-circle"></i>Invaild email</span>
                        </span>
                    </div>
                    <div>
                        <label class="form-group py-3">Password:</label>
                        <input type="password" name="password" ng-model="user.password" class="form-control" placeholder="Enter the password" ng-minlength="3" ng-required="true">
                        <span ng-show="myform.$submitted || myform.password.$dirty  || myform.password.$touched">
                            <span class="text-danger fw-bold" ng-show="myform.password.$error.required"><i class="fa fa-exclamation-circle"></i>Please fill the password</span>
                            <span class="text-danger fw-bold" ng-show="myform.password.$error.minlength"><i class="fa fa-exclamation-circle"></i>password contain atleast 3 value.</span>
                        </span>
                    </div>
                    <div>
                        <label class="form-group py-3">Confirm Password:</label>
                        <input type="password" name="confirmpass" ng-model="user.confirmpass" class="form-control" placeholder="Enter the confirmpassword" ng-required="true">
                        <div ng-show="myform.$submitted || myform.confirmpass.$dirty || myform.confirmpass.$touched">
                            <div class="text-danger fw-bold" ng-show="myform.confirmpass.$error.required"><i class="fa fa-exclamation-circle"></i>Please fill the confirmpassword</div>
                            <div class="text-danger fw-bold" ng-show="!myform.confirmpass.$error.required && user.confirmpass != user.password"><i class="fa fa-exclamation-circle"></i>Password Did not Match again</div>

                        </div>
                    </div>
                    <div class="form-outline">
                        <label class="form-label py-3 "> Gender:</label>
                        <input type="radio" name="gender" ng-model="user.gender" value="male" ng-required="true">
                        <label class="form-label">Male</label>
                        <input type="radio" name="gender" ng-model="user.gender" value="female" ng-required="true">
                        <label class="form-label">Female</label>
                        <span ng-show="myform.$submitted || myform.gender.$dirty || myform.gender.$touched">
                            <span class="text-danger fw-bold d-block" ng-show="myform.gender.$error.required"><i class="fa fa-exclamation-circle"></i>Please select gender</span>
                        </span>
                    </div>
                    <div class="dropdown">
                        <label class="form-group py-3">Deparment:</label>
                        <select id="Department" class="form-select" ng-model="user.deparment" name="deparment" ng-required="true">
                            <option value="">Choose your department</option>
                            <option value="IT" name="deparment">IT</option>
                            <option value="CS" name="deparment">CS</option>
                            <option value="Management" name="deparment">Management</option>
                            <option value="Account" name="deparment">Account</option>
                        </select>
                        <span ng-show="myform.$submitted || myform.deparment.$dirty || myform.deparment.$touched">
                            <span class="text-danger fw-bold" ng-show="myform.deparment.$error.required"><i class="fa fa-exclamation-circle"></i>Please select deparment</span>
                        </span>
                    </div>
                    <div class="row">
                        <label class="form-group py-2">Hobbies:</label>
                        <div class="col-6 d-inline-block form-check" ng-repeat="hobbie in hobbies track by $index">
                            <label class="form-check-label" ng-bind="hobbie.key"></label>
                            <input class="form-check-input hobbies" type="checkbox" name="hobbies" ng-model="hobbie.isSelected" ng-change="checkhobby()">
                        </div>
                        <span class="text-danger fw-bold" ng-bind="errormsg"></span>{{hobbie}}
                    </div>

                    <button type="submit" class="btn btn-primary my-2 text-center" ng-click="validation()">Register</button>
                    <div class="mt-3">
                        <p class="text-center mt-5 mb-0">
                            Have already an account?
                            <a href="@Url.Action("login","Account")" class="fw-bold text-body"><u>Login here</u></a>
                        </p>
                    </div>
                </form>
